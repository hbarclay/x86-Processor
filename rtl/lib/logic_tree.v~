////////////////////////////////////////////
//
// Logic Tree
//
// Can do a boolean operation over a bus in a tree structure.
//

module logic_tree (
   in,
   out
);

   parameter WIDTH = 8;
   parameter NINPUTS = 4;
   parameter OPERATION = 0; // 0 - Add, 1 - OR

   localparam levels = $clog2(NINPUTS);

   input [WIDTH*NINPUTS - 1:0] in;
   output [WIDTH-1:0] 	       out;
   
   genvar 		       i, j;
   generate
      for ( i = levels-1; i >= 0; i=i-1) begin
	 wire [2**i-1:0] level_result;
         for ( j = 0; i < 2**i; j=j+1) begin
	    if( OPERATION ) begin
	       
	    end else begin
	       
	    end
	 end

	 if ( i == 0) begin
	    assign out = level_result;
	 end
      end
   endgenerate 
   
endmodule
   
